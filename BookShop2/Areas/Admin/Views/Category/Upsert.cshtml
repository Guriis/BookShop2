@model BookShop.Models.ViewModels.Category
@{
    ViewData["Title"] = "Upsert";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var saveUpdate = Model.Id != 0 ? "Update" : "Save";
    var title = Model.Id != 0 ? "Edit Category" : "New Category";
}

<form method="post">
    <div class="row">
        <div class="col-9 border-bottom">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-8 justify-content-center">
                <div class="form-group row">
                    <div class="col-4 ">
                        <label asp-for="Name" class="control-label"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-8">
            @if (Model.Id != 0)
            {
                <partial name="_EditAndBackButton" />
            }
            else
            {
                <partial name="_CreateAndBackButton" />
            }
        </div>
    </div>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

